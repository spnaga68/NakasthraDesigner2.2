<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:gravity="bottom">

    <pasu.nakshatraDesigners.utils.widgets.CustomTextview
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/userImage"
            android:layout_marginStart="16dp"
            android:id="@+id/userName"
            android:drawablePadding="@dimen/dp10"
            android:drawableStart="@drawable/ic_person_outline_black_24dp"
            android:textColor="@color/alert_color"
            android:textSize="@dimen/sp18"
            tools:text="Nagarajan S"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <pasu.nakshatraDesigners.utils.widgets.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            tools:srcCompat="@tools:sample/avatars[0]"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/userImage"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>

    <pasu.nakshatraDesigners.utils.widgets.CustomTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userPhNo"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/userName"
            app:layout_constraintStart_toEndOf="@+id/userImage"
            android:layout_marginStart="16dp"
            tools:text="9876543210"
            android:drawablePadding="@dimen/dp10"
            android:drawableStart="@drawable/ic_phone"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/gray_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>