<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:behavior_hideable="true"
        android:background="@drawable/rect_drawable_box"
        android:paddingBottom="@dimen/dp20"
android:layout_marginStart="@dimen/dp20"
        android:elevation="@dimen/dp_3"
        android:layout_marginEnd="@dimen/dp20"
        app:behavior_peekHeight="130dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <pasu.nakshatraDesigners.utils.widgets.CustomTextview
            android:text="TN 32 32421"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/customTextview"
            android:drawablePadding="10dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="16dp"
            android:drawableStart="@drawable/ic_nav_track"
            tools:text="TN 32 3242"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <pasu.nakshatraDesigners.utils.widgets.CustomTextview
            android:text="11.0234,77.2342"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/customTextview4"
            android:drawableStart="@drawable/ic_latlng"
            android:drawablePadding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/customTextview2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/customTextview2"
            />

    <pasu.nakshatraDesigners.utils.widgets.CustomTextview
            android:text="98765432101"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/customTextview2"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginTop="8dp"
            app:drawableTint="@color/black"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_phone"
            app:layout_constraintTop_toBottomOf="@+id/customTextview"
            android:layout_marginStart="16dp"
            />

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/lorry_truck"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/customTextview"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/customTextview4"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_upward_black_24dp"
            android:id="@+id/upArrow"
            android:padding="@dimen/dp10"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/customTextview"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            />

    <pasu.nakshatraDesigners.utils.widgets.CustomTextview
            android:text="Speed : 50 Kmph "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/customTextview4"
            app:layout_constraintStart_toStartOf="@+id/customTextview4"
            android:layout_marginStart="8dp"
            tools:text="Speed : 50 Kmph "
            android:layout_marginTop="8dp"/>


    <pasu.nakshatraDesigners.utils.widgets.CustomTextview
            android:text="Last Updated : 4.30:45 PM "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/customTextview4"
            android:layout_marginStart="8dp"
            tools:text="Last Updated : 4.30:45 PM "
            android:layout_marginTop="8dp"/>

    <pasu.nakshatraDesigners.utils.widgets.CustomTextview
            android:text="Altitude : 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/customTextview4"
            android:layout_marginStart="8dp"
            tools:text="Altitude 0"
            android:layout_marginTop="8dp"/>

    <pasu.nakshatraDesigners.utils.widgets.CustomTextview
            android:text="Ignition : ON "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/customTextview4"
            android:layout_marginStart="8dp"
            tools:text="Ignition : ON "
            android:layout_marginTop="8dp"/>

    <pasu.nakshatraDesigners.utils.widgets.CustomTextview
            android:text="Signal strength : 20-30 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/customTextview4"
            android:layout_marginStart="8dp"
            tools:text="Signel strength - 20-30 "
            android:layout_marginTop="8dp"/>

    <pasu.nakshatraDesigners.utils.widgets.CustomTextview
            android:text="IMEI : 861359037617014"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/customTextview4"
            android:layout_marginStart="8dp"
            tools:text="IMEI 861359037617014"
            android:layout_marginTop="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>